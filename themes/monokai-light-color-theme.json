{
	/* Colors used:
	ghost-black: #3a3739;
	gray: #a9aaab;
	light-gray: #d7d7d7;
	white: #fff;

	yellow: #caa512;
	blue: #1c7e92;
	pink: #db0400;
	purple: #8b4dff;
	orange: #e05600;
	green: #0f8a15;
	*/
	"name": "Monokai Light",
	"type": "light",
	"colors": {
		"editor.background": "#fff", // color: white
		"editor.foreground": "#3a3739", // color: ghost-black
		"editor.selectionBackground": "#d7d7d7" // color: light-gray
	},
	"tokenColors": [
		{
			"name": "Comment",
			"scope": "comment",
			"settings": {
				"foreground": "#565554" // color: gray
			}
		},
		{
			"name": "Constants",
			"scope": [
				"constant.character",
				"constant.numeric",
				"constant.other"
			],
			"settings": {
				"foreground": "#8b4dff" // color: purple
			}
		},
		{
			"name": "Class",
			"scope": "entity.name.class",
			"settings": {
				"foreground": "#0f8a15" // color: green
			}
		},
		{
			"name": "Function",
			"scope": "entity.name.function",
			"settings": {
				"foreground": "#0f8a15" // color: green
			}
		},
		{
			"name": "Tag",
			"scope": ["entity.name.tag", "meta.tag"],
			"settings": {
				"foreground": "#db0400" // color: pink
			}
		},
		{
			"name": "Attributes",
			"scope": "entity.other.attribute-name",
			"settings": {
				"foreground": "#0f8a15" // color: green
			}
		},
		{
			"name": "Inherited Class",
			"scope": "entity.other.inherited-class",
			"settings": {
				"fontStyle": "italic",
				"foreground": "#0f8a15" // color: green
			}
		},
		{
			"name": "Invalid",
			"scope": "invalid",
			"settings": {
				"foreground": "#db0400", // color: pink
			}
		},
		{
			"name": "Keyword",
			"scope": "keyword",
			"settings": {
				"foreground": "#db0400", // color: pink
			}
		},
		{
			"name": "Storage",
			"scope": "storage",
			"settings": {
				"foreground": "#db0400", // color: pink
			}
		},
		{
			"name": "Type",
			"scope": "storage.type",
			"settings": {
				"fontStyle": "italic",
				"foreground": "#1c7e92", // color: blue
			}
		},
		{
			"name": "String",
			"scope": "string",
			"settings": {
				"foreground": "#caa512", // color: yellow
			}
		},
		{
			"name": "Support",
			"scope": ["support.constant", "support.function"],
			"settings": {
				"foreground": "#1c7e92", // color: blue
			}
		},
		{
			"name": "Support",
			"scope": ["support.class", "support.type"],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#1c7e92", // color: blue
			}
		},
		{
			"name": "Variable",
			"scope": "variable",
			"settings": {
				"foreground": "#3a3739b3", // color: 70% dimmed ghost-black
			}
		},
		{
			"name": "Parameter",
			"scope": "variable.parameter",
			"settings": {
				"foreground": "#e05600", // color: orange
			}
		},
		// CSS specific
		{
			"name": "CSS Unit",
			"scope": "source.css keyword.other.unit",
			"settings": {
				"foreground": "#8b4dff" // color: purple
			}
		},
		// JS Specific
		{
			"name": "THis",
			"scope": "variable.language.this.js",
			"settings": {
				"foreground": "#db0400" // color: pink
			}
		},
		// Python Specific
		{
			"name": "self",
			"scope": "variable.parameter.function.language.special.self.python",
			"settings": {
				"foreground": "#db0400" // color: pink
			}
		},
		// Markdown specific
		{
			"name": "Markdown - Heading",
			"scope": "markup.heading.markdown",
			"settings": {
				"foreground": "#0f8a15" // color: green
			}
		},
		{
			"name": "Markdown - Link URL",
			"scope": "markup.underline.link.markdown",
			"settings": {
				"foreground": "#caa512" // color: yellow
			}
		},
		{
			"name": "Markdown - Link Name",
			"scope": "string.other.link.title.markdown",
			"settings": {
				"foreground": "#8b4dff" // color: purple
			}
		},
		{
			"name": "Markdown - Bold",
			"scope": "markup.bold.markdown",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markdown - Italic",
			"scope": "markup.italic.markdown",
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "Markdown - Code",
			"scope": [
				"markup.inline.raw.string.markdown",
				"markup.fenced_code.block.markdown",
			],
			"settings": {
				"foreground": "#1c7e92" // color: blue
			}
		},
		{
			"name": "Markdown - List",
			"scope": "punctuation.definition.list.begin.markdown",
			"settings": {
				"foreground": "#db0400" // color: pink
			}
		}
	]
}
